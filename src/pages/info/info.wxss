/**info.wxss**/

.info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.info-logo {  
  overflow:hidden;  
  display: block;  
  width: 225rpx;  
  height: 225rpx;  
  margin: 50rpx;  
  border-radius: 50%;  
  border: 4rpx solid #fff;  
  box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.2);  
}  

.info-name {
  font-weight: 600;
  font-size: 40rpx;
  margin-bottom: 16rpx;
}

.info-text{
  font-size: 32rpx;
  color: #6161cc;
  /* font-weight: 600;
  margin-bottom: 16rpx; */
}

.navigator {
  border-bottom: solid 1rpx #dddddd;
}
.navigator-top, .navigator {
  border-top: solid 1rpx #dddddd;
  padding: 35rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.navigator-text {
  flex: 1;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.navigator-img {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.title {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight: 600;
  font-size: 40rpx;
  margin: 5%;
}

.usage {
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom: 5%;
}

.ground{
  position: fixed;
  text-align: center;
  bottom: 20rpx;
  left: 0;
  right: 0;
}

.contact-btn {
  font-weight: 600 !important;
  font-size: 28rpx !important;
  color: #6161cc;
  background-color: transparent;
}

.contact-btn::after {
  border: none;
}